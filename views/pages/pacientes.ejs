<% include partials/header.ejs %>

<body id="main" ng-app="medlineApp">
  <div class="container" id="container-sidebar">
    <div class="row">
      <div class="wrapper">
        <% include partials/sidebar.ejs %>

        <div class="content" id="main-content" ng-controller="pacientesController">
          <div>
            <h1>Pacientes</h1>

            <div class="row">
              <div class="col-md-2"></div>

              <div class="col-md-6">
                <input class="form-control" placeholder="Filtre os pacientes pelo nome" ng-model="searchName">
              </div>

              <div class="col-md-3">
                  <button class="btn btn-success btn-md pull-right" data-toggle="modal" title="Cadastrar Paciente" data-target="#cadastrar"><span class="glyphicon glyphicon-plus"></span> Cadastrar Paciente</button>
              </div>
            </div>
            <hr>
            <div ng-repeat="paciente in pacientes | filter:searchName">

              <div class="col-xs-6 col-sm-4 col-lg-2">
        			<div class="thumbnail ">
								<img src="../images/default_user_avatar.jpg" style="border-radius: 50%; width: 50%;height: auto;">
        				<div class="caption">
        					<h3 style="text-align: center">{{paciente.fullname}}</h2>
                  <hr>
                  <div style="text-align: center">
                    Idade: {{paciente.age}}<br>
                    Fone: {{paciente.phone}}
                  </div>
                </div>
                <center><a type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#prontuario">Prontuário</a></center>
        				<!-- /.caption -->
        			</div>
        			<!-- /.thumbnail -->
        		</div>
          </div>
          </div>

          <div id="cadastrar" class="modal fade">
  <div class="modal-dialog modal-login">
  <div class="modal-content">
  <div class="modal-header">
  <div class="avatar-cadastro">
    <img src="../images/default_user_avatar.jpg" id="modal-avatar">
  </div><br>
  <h4>Cadastro de Paciente</h4>
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  </div>
  <div class="modal-body">
  <div id="clinic">
        <form action="/clinic/patient/new" method="post"><br>
                <div class="alert alert-danger" id="error-message-patient" style="display:none">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="Usuário" required="required" autofocus>
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" name="fullname" placeholder="Nome completo" required="required" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Senha" required="required">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="age" placeholder="Idade" required="required" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="telephone" placeholder="Telefone" required="required" autofocus>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Cadastrar</button>
                </div>
            </form>
    </div>
  </div>
  </div>
  </div>
  </div> <!--cadastrar modal fim-->


  <div id="prontuario" class="modal fade">
      <div class="modal-dialog modal-login">
      <div class="modal-content">
      <div class="modal-header">
      <div class="avatar-cadastro">
        <img src="../images/prancheta_avatar.png" id="modal-avatar">
      </div><br>
      <h4>Cadastro de Prontuário</h4>
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
      <div id="clinic">
            <form action="/clinic/patient/new" method="post"><br>
                    <div class="alert alert-danger" id="error-message-patient" style="display:none">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="Usuário" required="required" autofocus>
                    </div>
                    <div class="form-group">
                      <input type="text" class="form-control" name="fullname" placeholder="Nome completo" required="required" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Senha" required="required">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" name="age" placeholder="Idade" required="required" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="telephone" placeholder="Telefone" required="required" autofocus>
                    </div>
    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Cadastrar</button>
                    </div>
                </form>
        </div>
      </div>
      </div>
      </div>
      </div>







        </div>
      </div>
    </div>
  </div>



  <div id="sair" class="modal fade">
    <div class="modal-dialog modal-confirm">
      <div class="modal-content">
              <div class="modal-header">
              <h4 class="modal-title">Logout</h4>
              </div>
          <div class="modal-body">
              <p>Você está prestes a sair do Medline.  Deseja realmente sair? </p>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-info" data-dismiss="modal">Cancelar</button>
              <a class="btn btn-danger" href="/logout">Sair</a>
          </div>
      </div>
  </div>
</div>
</body>
</head>
</html>
